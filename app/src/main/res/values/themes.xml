<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DictationIme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/space_grotesk</item>
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent_pressed</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/ink</item>
        <item name="colorSurfaceVariant">@color/surface_alt</item>
        <item name="colorOnSurfaceVariant">@color/ink</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/surface</item>
    </style>

    <style name="Widget.DictationIme.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.DictationIme.DangerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_danger_button_states</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/text_on_danger_button</item>
    </style>
</resources>
