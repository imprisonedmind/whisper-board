<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ink"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/app_profiles_dialog_body"
        android:textColor="@color/ink_muted"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/dialogPromptInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_dialog_input"
        android:gravity="top|start"
        android:hint="@string/app_profiles_dialog_prompt_example"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="6"
        android:minHeight="112dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/ink"
        android:textColorHint="@color/ink_muted"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogCancelButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_danger_button_states"
            android:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="42dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/app_profiles_dialog_cancel"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogSubmitButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="42dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/app_profiles_dialog_submit"
            android:textColor="@color/on_primary" />
    </LinearLayout>
</LinearLayout>
