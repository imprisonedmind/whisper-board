<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/onboardingStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ink_muted"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/ink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onboardingBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/ink_muted"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/countryPickerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_card"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/onboarding_country_field"
                android:textColor="@color/ink"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countryPickerValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ink_muted"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onboardingModelCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/onboardingModelHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="@string/onboarding_model_hint"
                android:textColor="@color/ink_muted"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/onboardingModelListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/onboardingPrimaryButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:textColor="@color/on_primary" />

        <Button
            android:id="@+id/onboardingSecondaryButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_outline_button"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:textColor="@color/ink" />

        <ProgressBar
            android:id="@+id/onboardingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
