<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createAccountScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_brand"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_create_title"
            android:textColor="@color/home_ink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createAccountHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/auth_create_account_helper"
            android:textColor="@color/home_ink_muted"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_home_card_brand"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_email_label"
                android:textColor="@color/home_ink"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/createAccountEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="@string/auth_email_hint"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="@color/home_ink"
                android:textColorHint="@color/home_ink_muted"
                android:textSize="16sp" />

            <Button
                android:id="@+id/createAccountButton"
                style="@style/Widget.DictationIme.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_primary_button"
                android:backgroundTint="@null"
                android:minHeight="48dp"
                android:text="@string/auth_create_start_action"
                android:textColor="@color/on_primary" />

            <ProgressBar
                android:id="@+id/createAccountProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/createAccountSwitchToLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/auth_go_to_login"
            android:textColor="@color/home_ink_muted"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
