<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/authHomeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_brand"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="32dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_short"
            android:textColor="@color/home_ink"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/auth_home_title"
            android:textColor="@color/home_ink"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/auth_home_helper"
            android:textColor="@color/home_ink_muted"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_home_card_brand"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/authHomeLoginButton"
                style="@style/Widget.DictationIme.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_primary_button"
                android:backgroundTint="@null"
                android:text="@string/auth_home_login"
                android:textColor="@color/on_primary" />

            <Button
                android:id="@+id/authHomeCreateButton"
                style="@style/Widget.DictationIme.PrimaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_outline_button"
                android:backgroundTint="@null"
                android:text="@string/auth_home_create"
                android:textColor="@color/home_ink" />

            <ProgressBar
                android:id="@+id/authHomeProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/authHomeTesterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/auth_login_as_tester"
            android:textColor="@color/home_ink_muted"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
