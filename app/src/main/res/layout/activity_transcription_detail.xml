<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                android:padding="6dp"
                android:src="@drawable/ic_back"
                android:tint="@color/ink" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/history_detail_title"
                android:textColor="@color/ink"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history_detail_transcript_label"
                android:textColor="@color/ink_muted"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transcriptText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/ink"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/copyButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="@string/history_copy_text"
            android:textColor="@color/on_primary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/markInaccurateButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_danger_button_states"
            android:backgroundTint="@null"
            android:minHeight="48dp"
            android:text="@string/history_mark_inaccurate_button"
            android:textColor="@color/on_primary" />

        <TextView
            android:id="@+id/inaccurateStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/ink_muted"
            android:textSize="13sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history_detail_meta_label"
                android:textColor="@color/ink_muted"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/metaTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/ink"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metaDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ink"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metaProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ink"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metaModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ink"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/metaRequestId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/ink_muted"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
