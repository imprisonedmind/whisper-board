<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:background="@drawable/bg_card"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ink"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/ink_muted"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogCancelButton"
            style="@style/Widget.DictationIme.PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="42dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/data_tracking_disable_keep_enabled"
            android:textColor="@color/on_primary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogSubmitButton"
            style="@style/Widget.DictationIme.DangerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_danger_button_states"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="42dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/data_tracking_disable_turn_off" />
    </LinearLayout>
</LinearLayout>
