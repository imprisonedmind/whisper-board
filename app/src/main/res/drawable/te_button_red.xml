<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="@dimen/te_button_shadow" android:top="@dimen/te_button_shadow">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <solid android:color="@color/te_red_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <gradient
                android:angle="315"
                android:startColor="@color/te_red_light"
                android:endColor="@color/te_red" />
            <stroke
                android:width="1dp"
                android:color="@color/te_red_dark" />
        </shape>
    </item>
    <item
        android:insetLeft="@dimen/te_button_bevel"
        android:insetTop="@dimen/te_button_bevel"
        android:insetRight="@dimen/te_button_bevel"
        android:insetBottom="@dimen/te_button_bevel">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <gradient
                android:angle="135"
                android:startColor="#F08A80"
                android:endColor="@color/te_red" />
        </shape>
    </item>
    <item
        android:insetLeft="2dp"
        android:insetTop="2dp"
        android:insetRight="2dp"
        android:insetBottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <stroke android:width="1dp" android:color="#F6B0A8" />
        </shape>
    </item>
</layer-list>
