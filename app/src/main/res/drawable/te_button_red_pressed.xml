<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <solid android:color="@color/te_red_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <gradient
                android:angle="135"
                android:startColor="@color/te_red"
                android:endColor="@color/te_red_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/te_red_dark" />
        </shape>
    </item>
    <item
        android:insetLeft="3dp"
        android:insetTop="3dp"
        android:insetRight="3dp"
        android:insetBottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/te_button_radius" />
            <stroke android:width="1dp" android:color="#D97B72" />
        </shape>
    </item>
</layer-list>
